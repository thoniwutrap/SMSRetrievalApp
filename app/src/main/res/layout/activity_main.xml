<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">


     <androidx.constraintlayout.widget.ConstraintLayout
         app:layout_constraintTop_toTopOf="parent"
         app:layout_constraintStart_toStartOf="parent"
         android:id="@+id/actionbarTo"
         android:layout_width="match_parent"
         android:layout_height="?actionBarSize">


          <TextView
              android:id="@+id/txtPhoneTitle"
              android:textSize="16dp"
              android:layout_marginStart="@dimen/padding_start"
               app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintBottom_toBottomOf="parent"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
               android:text="To"
              android:layout_marginLeft="@dimen/padding_start" />


          <EditText
              android:inputType="number"
              android:background="@android:color/transparent"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintBottom_toBottomOf="parent"
              android:id="@+id/edtPhoneNo"
              android:textSize="16dp"
              app:layout_constraintStart_toEndOf="@id/txtPhoneTitle"
              app:layout_constraintEnd_toEndOf="parent"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:hint="Phone number"
              android:layout_marginLeft="@dimen/padding_start"
              android:layout_marginRight="@dimen/padding_start"/>

     </androidx.constraintlayout.widget.ConstraintLayout>

     <View
         android:id="@+id/lineShadow"
          app:layout_constraintTop_toBottomOf="@id/actionbarTo"
         android:layout_width="match_parent"
         android:layout_height="4dp"
          android:background="@drawable/bg_shadow"/>


     <androidx.constraintlayout.widget.ConstraintLayout
         android:layout_margin="@dimen/padding_start"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintEnd_toEndOf="parent"
         android:background="@drawable/edit_text_default"
         app:layout_constraintTop_toBottomOf="@id/lineShadow"
         app:layout_constraintVertical_chainStyle="packed"
         android:id="@+id/lyWriteMsg"
         android:layout_width="match_parent"
         android:layout_height="wrap_content">


          <EditText
              android:layout_marginStart="18dp"
              android:layout_marginEnd="18dp"
              android:layout_marginTop="8dp"
              android:layout_marginBottom="8dp"
              android:textColor="@color/black"
              android:id="@+id/edtMessage"
              app:layout_constraintEnd_toStartOf="@id/line2"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              android:background="@android:color/transparent"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:hint="Write a message..."/>

          <View
              android:id="@+id/line2"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintStart_toEndOf="@id/edtMessage"
              app:layout_constraintEnd_toStartOf="@id/btnSendMessage"
              android:background="@color/light_grey"
              android:layout_width="1dp"
              android:layout_height="0dp" />

          <ImageButton
              app:layout_constraintStart_toEndOf="@id/line2"
              android:padding="10dp"
              android:background="?selectableItemBackground"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintBottom_toBottomOf="parent"
              android:id="@+id/btnSendMessage"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:src="@drawable/ic_send_black_24dp"
              app:layout_constraintEnd_toEndOf="parent"/>

     </androidx.constraintlayout.widget.ConstraintLayout>


     <TextView
         android:background="@color/colorPrimary"
         android:id="@+id/txtSMSTitle"
         app:layout_constraintStart_toStartOf="parent"
          android:layout_marginTop="50dp"
          app:layout_constraintTop_toBottomOf="@id/lyWriteMsg"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
          android:textColor="@color/white"
          android:textSize="18dp"
         android:textStyle="bold"
         android:padding="10dp"
          android:text="SMS RECEIVE" />


     <androidx.recyclerview.widget.RecyclerView
         android:id="@+id/rvMessage"
         android:layout_width="match_parent"
         android:layout_height="0dp"
         app:layout_constraintBottom_toBottomOf="parent"
         app:layout_constraintTop_toBottomOf="@id/txtSMSTitle"
         tools:layout_editor_absoluteX="0dp" />


</androidx.constraintlayout.widget.ConstraintLayout>