<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:toggle="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".MainActivity">


     <androidx.constraintlayout.widget.ConstraintLayout
         app:layout_constraintTop_toTopOf="parent"
         app:layout_constraintStart_toStartOf="parent"
         android:id="@+id/actionbarTo"
         android:layout_width="match_parent"
         android:layout_height="?actionBarSize">


          <TextView
              android:id="@+id/txtPhoneTitle"
              android:textSize="16dp"
              android:layout_marginStart="@dimen/padding_start"
               app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintBottom_toBottomOf="parent"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
               android:text="To"
              android:layout_marginLeft="@dimen/padding_start" />


          <EditText
              android:inputType="number"
              android:background="@android:color/transparent"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintBottom_toBottomOf="parent"
              android:id="@+id/edtPhoneNo"
              android:textSize="16dp"
              app:layout_constraintStart_toEndOf="@id/txtPhoneTitle"
              app:layout_constraintEnd_toEndOf="parent"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:hint="Phone number"
              android:layout_marginLeft="@dimen/padding_start"
              android:layout_marginRight="@dimen/padding_start"/>

     </androidx.constraintlayout.widget.ConstraintLayout>

     <View
         android:id="@+id/lineShadow"
          app:layout_constraintTop_toBottomOf="@id/actionbarTo"
         android:layout_width="match_parent"
         android:layout_height="4dp"
          android:background="@drawable/bg_shadow"/>


     <androidx.constraintlayout.widget.ConstraintLayout
         android:layout_margin="@dimen/padding_start"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintEnd_toEndOf="parent"
         android:background="@drawable/edit_text_default"
         app:layout_constraintTop_toBottomOf="@id/lineShadow"
         app:layout_constraintVertical_chainStyle="packed"
         android:id="@+id/lyWriteMsg"
         android:layout_width="match_parent"
         android:layout_height="wrap_content">


          <EditText
              android:maxLength="2"
              android:layout_marginStart="18dp"
              android:layout_marginEnd="18dp"
              android:layout_marginTop="8dp"
              android:layout_marginBottom="8dp"
              android:textColor="@color/black"
              android:id="@+id/edtMessageApiId"
              android:maxLines="1"
              android:singleLine="true"
              android:inputType="number"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              android:background="@android:color/transparent"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:hint="API ID..."/>


     </androidx.constraintlayout.widget.ConstraintLayout>

     <androidx.constraintlayout.widget.ConstraintLayout
         android:layout_margin="@dimen/padding_start"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintEnd_toEndOf="parent"
         android:background="@drawable/edit_text_default"
         app:layout_constraintTop_toBottomOf="@id/lyWriteMsg"
         app:layout_constraintVertical_chainStyle="packed"
         android:id="@+id/lyWriteMsg2"
         android:layout_width="match_parent"
         android:layout_height="wrap_content">


          <EditText
              android:maxLength="3"
              android:maxLines="1"
              android:singleLine="true"
              android:layout_marginStart="18dp"
              android:layout_marginEnd="18dp"
              android:layout_marginTop="8dp"
              android:layout_marginBottom="8dp"
              android:textColor="@color/black"
              android:id="@+id/edtMessageRequestId"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              android:background="@android:color/transparent"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:hint="RequestID..."/>


     </androidx.constraintlayout.widget.ConstraintLayout>

     <androidx.constraintlayout.widget.ConstraintLayout
         android:layout_margin="@dimen/padding_start"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintEnd_toEndOf="parent"
         android:background="@drawable/edit_text_default"
         app:layout_constraintTop_toBottomOf="@id/lyWriteMsg2"
         app:layout_constraintVertical_chainStyle="packed"
         android:id="@+id/lyWriteMsg3"
         android:layout_width="match_parent"
         android:layout_height="wrap_content">


          <EditText
              android:layout_marginStart="18dp"
              android:layout_marginEnd="18dp"
              android:layout_marginTop="8dp"
              android:layout_marginBottom="8dp"
              android:textColor="@color/black"
              android:id="@+id/edtMessageData"
              app:layout_constraintEnd_toStartOf="@id/line2"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              android:background="@android:color/transparent"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:hint="Write a message data..."/>

          <View
              android:id="@+id/line2"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintStart_toEndOf="@id/edtMessageData"
              app:layout_constraintEnd_toStartOf="@id/btnSendMessage"
              android:background="@color/light_grey"
              android:layout_width="1dp"
              android:layout_height="0dp" />

          <ImageButton
              app:layout_constraintStart_toEndOf="@id/line2"
              android:padding="10dp"
              android:background="?selectableItemBackground"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintBottom_toBottomOf="parent"
              android:id="@+id/btnSendMessage"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:src="@drawable/ic_send_black_24dp"
              app:layout_constraintEnd_toEndOf="parent"/>

     </androidx.constraintlayout.widget.ConstraintLayout>

     <TextView
         android:layout_marginEnd="18dp"
         app:layout_constraintTop_toTopOf="@id/toggleKey"
         app:layout_constraintBottom_toBottomOf="@id/toggleKey"
         app:layout_constraintEnd_toStartOf="@id/toggleKey"
         android:id="@+id/txtDolphinKey"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
          android:text="Dolphin Key">

     </TextView>

     <com.zcw.togglebutton.ToggleButton
         android:layout_marginEnd="18dp"
         android:layout_marginTop="15dp"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintTop_toBottomOf="@id/lyWriteMsg3"
         android:id="@+id/toggleKey"
         android:layout_width="50dp"
         toggle:tbOnColor="@color/colorPrimary"
         toggle:tbOffColor="@color/light_grey"
         toggle:tbSpotColor="@color/white"
         toggle:tbOffBorderColor="@color/light_grey"
         toggle:tbBorderWidth="0.5dp"
         android:layout_height="25dp" >
     </com.zcw.togglebutton.ToggleButton>


     <LinearLayout
         android:layout_marginTop="20dp"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintTop_toBottomOf="@id/toggleKey"
         app:layout_constraintBottom_toBottomOf="parent"
         android:layout_width="match_parent"
         android:layout_height="0dp">

          <androidx.constraintlayout.widget.ConstraintLayout
              android:layout_weight="1"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

               <TextView
                   android:background="@color/colorPrimary"
                   android:id="@+id/txtSMSSendTitle"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintEnd_toEndOf="parent"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:textColor="@color/white"
                   android:textSize="16dp"
                   android:textStyle="bold"
                   android:padding="10dp"
                   android:text="SMS SENT" />


               <androidx.recyclerview.widget.RecyclerView
                   tools:listitem="@layout/list_item_msg"
                   android:id="@+id/rvMessageSend"
                   android:layout_width="match_parent"
                   android:layout_height="0dp"
                   app:layout_constraintBottom_toBottomOf="parent"
                   app:layout_constraintTop_toBottomOf="@id/txtSMSSendTitle"
                   tools:layout_editor_absoluteX="0dp" />

          </androidx.constraintlayout.widget.ConstraintLayout>

          <View
              android:layout_width="1dp"
              android:layout_height="match_parent"
               android:background="@color/light_grey">

          </View>
          <androidx.constraintlayout.widget.ConstraintLayout
              android:layout_weight="1"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

               <TextView
                   android:background="@color/colorPrimary"
                   android:id="@+id/txtSMSRecieveTitle"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintEnd_toEndOf="parent"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:textColor="@color/white"
                   android:textSize="16dp"
                   android:textStyle="bold"
                   android:padding="10dp"
                   android:text="SMS RECEIVED" />


               <androidx.recyclerview.widget.RecyclerView
                   tools:listitem="@layout/list_item_msg"
                   android:id="@+id/rvMessageReceive"
                   android:layout_width="match_parent"
                   android:layout_height="0dp"
                   app:layout_constraintBottom_toBottomOf="parent"
                   app:layout_constraintTop_toBottomOf="@id/txtSMSRecieveTitle"
                   tools:layout_editor_absoluteX="0dp" />

          </androidx.constraintlayout.widget.ConstraintLayout>

     </LinearLayout>





</androidx.constraintlayout.widget.ConstraintLayout>